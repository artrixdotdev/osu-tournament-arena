{
   "name": "@ota/ui",
   "private": true,
   "type": "module",
   "exports": {
      ".": {
         "types": "./src/index.ts",
         "svelte": "./src/index.ts",
         "default": "./src/index.ts"
      },
      "./utils.js": "./src/utils.ts",
      "./actions/*": "./src/actions/*",
      "./attachments/*": "./src/attachments/ui",
      "./icons/*": "./src/components/icons/*",
      "./components/*": "./src/components/ui/*",
      "./styles/*": "./src/styles/*",
      "./transitions/*": "./src/transitions/*",
      "./hooks/*": "./src/hooks/*"
   },
   "sideEffects": [
      "**/*.css"
   ],
   "license": "MIT",
   "scripts": {
      "dev": "svelte-kit sync && svelte-package --watch --input=src",
      "build": "svelte-kit sync && svelte-package --input=src",
      "lint": "eslint .",
      "format": "prettier --write .",
      "check-types": "svelte-check --tsconfig ./tsconfig.json",
      "ui:add": "pnpm dlx shadcn-svelte@latest add",
      "ui:update": "pnpm dlx shadcn-svelte@latest update"
   },
   "dependencies": {
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "color-space": "^2.3.2",
      "radix-ui": "^1.4.3",
      "sonner": "^2.0.7"
   },
   "devDependencies": {
      "@lucide/svelte": "catalog:",
      "@ota/eslint-config": "workspace:*",
      "@ota/prettier-config": "workspace:*",
      "@ota/svelte-config": "workspace:*",
      "@ota/tsconfig": "workspace:*",
      "@sveltejs/kit": "catalog:",
      "@sveltejs/package": "^2.5.0",
      "@sveltejs/vite-plugin-svelte": "catalog:",
      "eslint": "catalog:",
      "prettier": "catalog:",
      "svelte": "catalog:",
      "svelte-check": "catalog:",
      "tailwind-merge": "^3.4.0",
      "tailwind-variants": "^3.2.2",
      "tailwindcss": "catalog:",
      "tw-animate-css": "^1.4.0",
      "typescript": "catalog:",
      "zod": "catalog:"
   },
   "peerDependencies": {
      "svelte": "catalog:",
      "zod": "catalog:"
   },
   "prettier": "@ota/prettier-config"
}
