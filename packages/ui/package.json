{
   "name": "@ota/ui",
   "private": true,
   "type": "module",
   "exports": {
      ".": {
         "types": "./dist/index.d.ts",
         "svelte": "./dist/index.js"
      }
   },
   "files": [
      "dist",
      "!dist/**/*.test.*",
      "!dist/**/*.spec.*",
      "src",
      "!src/**/*.test.*",
      "!src/**/*.spec.*"
   ],
   "sideEffects": [
      "**/*.css"
   ],
   "license": "MIT",
   "scripts": {
      "dev": "svelte-kit sync && svelte-package --watch --input=src",
      "build": "svelte-kit sync && svelte-package --input=src",
      "lint": "eslint .",
      "check-types": "svelte-check --tsconfig ./tsconfig.json",
      "ui:add": "pnpm dlx shadcn-svelte@latest add",
      "ui:update": "pnpm dlx shadcn-svelte@latest update"
   },
   "dependencies": {
      "@lucide/svelte": "catalog:",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "color-space": "^2.3.2",
      "radix-ui": "^1.4.3",
      "sonner": "^2.0.7",
      "tailwind-merge": "^3.3.1",
      "tailwind-variants": "^3.2.2",
      "tw-animate-css": "^1.4.0"
   },
   "devDependencies": {
      "@ota/eslint-config": "workspace:*",
      "@ota/prettier-config": "workspace:*",
      "@ota/svelte-config": "workspace:*",
      "@ota/tsconfig": "workspace:*",
      "@sveltejs/kit": "catalog:",
      "@sveltejs/package": "^2.5.0",
      "@sveltejs/vite-plugin-svelte": "catalog:",
      "eslint": "catalog:",
      "prettier": "catalog:",
      "svelte": "catalog:",
      "svelte-check": "catalog:",
      "tailwindcss": "catalog:",
      "typescript": "catalog:",
      "zod": "catalog:"
   },
   "peerDependencies": {
      "svelte": "catalog:",
      "zod": "catalog:"
   },
   "prettier": "@ota/prettier-config"
}
