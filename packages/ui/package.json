{
   "name": "@ota/ui",
   "private": true,
   "type": "module",
   "sideEffects": false,
   "exports": {
      ".": {
         "types": "./src/index.ts",
         "svelte": "./src/index.ts",
         "default": "./src/index.ts"
      },
      "./utils.js": "./src/utils.ts",
      "./actions/*": "./src/actions/*",
      "./attachments/*": "./src/attachments/*",
      "./components/*": "./src/components/*",
      "./styles/*": "./src/styles/*",
      "./transitions/*": "./src/transitions/*",
      "./hooks/*": "./src/hooks/*"
   },
   "license": "MIT",
   "scripts": {
      "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
      "clean": "git clean -xdf .cache .turbo dist node_modules",
      "format": "prettier --check . --ignore-path ../../.gitignore",
      "lint": "eslint --flag unstable_native_nodejs_ts_config",
      "typecheck": "tsc --noEmit --emitDeclarationOnly false",
      "ui:add": "pnpm dlx shadcn-svelte@latest add",
      "ui:update": "pnpm dlx shadcn-svelte@latest update"
   },
   "dependencies": {
      "@radix-ui/react-icons": "^1.3.2",
      "@radix-ui/react-slot": "^1.2.4",
      "class-variance-authority": "^0.7.1",
      "color-space": "^2.3.2",
      "radix-ui": "^1.4.3",
      "sonner": "^2.0.7",
      "tailwind-merge": "^3.3.1"
   },
   "devDependencies": {
      "@ota/eslint-config": "workspace:*",
      "@ota/prettier-config": "workspace:*",
      "@ota/tsconfig": "workspace:*",
      "@ota/svelte-config": "workspace:*",
      "svelte-check": "catalog:",
      "eslint": "catalog:",
      "prettier": "catalog:",
      "typescript": "catalog:",
      "zod": "catalog:"
   },
   "peerDependencies": {
      "svelte": "catalog:",
      "zod": "catalog:"
   },
   "prettier": "@ota/prettier-config"
}
